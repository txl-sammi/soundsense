<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333">

    <!-- App Name and Profile Picture (Header) -->

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="SoundSense"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="Profile picture"
        android:background="@drawable/circular_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:srcCompat="@drawable/pfp" />

    <!-- Large Mood Image -->

    <!-- Mood Name -->

    <ImageView
        android:id="@+id/mood_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="108dp"
        android:background="@drawable/circular_background"
        android:contentDescription="Playlist mood image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_name" />

    <TextView
        android:id="@+id/mood_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name of Mood"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/mood_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Description -->
    <TextView
        android:id="@+id/mood_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="recommended playlists for your mood"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/mood_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Playlist Grid (3 Images/Buttons) -->
    <LinearLayout
        android:id="@+id/playlist_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/mood_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 1st Playlist Button -->
        <ImageView
            android:id="@+id/playlist_1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="Playlist 1"
            android:background="#00BCD4"
            android:layout_margin="4dp" />

        <!-- 2nd Playlist Button -->
        <ImageView
            android:id="@+id/playlist_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="Playlist 2"
            android:background="#E1BEE7"
            android:layout_margin="4dp" />

        <!-- 3rd Playlist Button -->
        <ImageView
            android:id="@+id/playlist_3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="Playlist 3"
            android:background="#FFF59D"
            android:layout_margin="4dp" />

    </LinearLayout>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#222"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/nav_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Home"
            android:padding="16dp"
            android:layout_weight="1"
            tools:srcCompat="@drawable/ic_home" />

        <ImageView
            android:id="@+id/nav_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Search"
            android:padding="16dp"
            android:layout_weight="1"
            tools:srcCompat="@drawable/ic_search" />

        <ImageView
            android:id="@+id/nav_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Music"
            android:padding="16dp"
            android:layout_weight="1"
            tools:srcCompat="@drawable/ic_music" />

        <ImageView
            android:id="@+id/nav_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Profile"
            android:padding="16dp"
            android:layout_weight="1"
            tools:srcCompat="@drawable/ic_profile" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
